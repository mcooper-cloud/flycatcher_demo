{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "EnvironmentName": {
            "Type": "String",
            "Description": "Environment level",
            "AllowedValues" : ["dev", "test", "prod", "mgmt"],
            "Default": "dev"
        },
        "ProjectName": {
            "Type": "String",
            "Description": "Human readable project name",
            "Default": "USER_INPUT_REQUIRED"
        },
        "SystemNumber": {
            "Type": "String",
            "Description": "Internal system number",
            "Default": "USER_INPUT_REQUIRED"
        },
        "Domain": {
            "Type": "String",
            "Description": "Domain used to form the bucket name",
            "Default": "example.com"
        },
        "BucketVersionStatus": {
            "Type": "String",
            "Description": "Status of S3 bucket versioning (Enabled | Suspended)",
            "Default": "Suspended"
        },
        "KMSKeyARN": {
            "Type": "String",
            "Description": "ARN of KMS key used to encrypt the S3Bucket bucket",
            "Default": "NO_VALUE"
        }
    },
    "Metadata" : {
        "AWS::CloudFormation::Interface" : {
            "ParameterGroups" : [
                {
                    "Label" : { "default":"S3Bucket S3 Bucket Settings" },
                    "Parameters" : [ 
                        "EnvironmentName", "ProjectName",
                        "SystemNumber", 
                        "Domain", "BucketVersionStatus",
                        "KMSKeyARN"
                    ]
                }
            ]
        }
    },
    "Conditions" : {
        "EnableVersioning" : {
            "Fn::Equals": [
                {"Ref": "BucketVersionStatus"},
                "Enabled"
            ]
        },
        "EnableEncryption" : {
            "Fn::Not": [{ "Fn::Equals": [
                {"Ref": "KMSKeyARN"},
                "NO_VALUE"
            ]}]
        }
    },
    "Resources": {
        "S3Bucket" : {
            "Type" : "AWS::S3::Bucket",
            "Properties" : {
                "BucketName" : { "Fn::Sub": [ 
                    "${ProjectName}.${EnvironmentName}.${Domain}", { 
                        "ProjectName": {"Ref" : "ProjectName" },
                        "EnvironmentName": {"Ref" : "EnvironmentName" },
                        "Domain": {"Ref" : "Domain" }
                    }
                ]},
                "Tags" : [ 
                    {"Key" : "EnvironmentName","Value" : { "Ref" : "EnvironmentName" }},
                    {"Key" : "ProjectName","Value" : { "Ref" : "ProjectName" }},
                    {"Key" : "SystemNumber","Value" : { "Ref" : "SystemNumber" }}
                ],
                "BucketEncryption" : { "Fn::If" : 
                    [ "EnableEncryption",
                        {
                            "ServerSideEncryptionConfiguration" : [{
                                "ServerSideEncryptionByDefault" : {
                                    "KMSMasterKeyID" : { "Ref": "KMSKeyARN" },
                                    "SSEAlgorithm" : "aws:kms"
                                }
                            }]
                        },
                        {"Ref" : "AWS::NoValue"}
                    ]
                },
                "VersioningConfiguration" : { "Fn::If" : [
                    "EnableVersioning",
                    {"Status" : "Enabled"},
                    {"Ref" : "AWS::NoValue"}
                ]}
            },
        },
        "S3BucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Id": "PutObjPolicy",
                    "Statement": [
                        {
                            "Sid": "SecureTransport",
                            "Effect": "Deny",
                            "Principal": "*",
                            "Action": "s3:*",
                            "Resource" : {"Fn::Join" : [ "/", [ { "Fn::GetAtt": [ "S3Bucket", "Arn" ] }, "*" ] ] },
                            "Condition": {
                                "Bool": {
                                    "aws:SecureTransport": "false"
                                }
                            }
                        }
                    ]
                },
                "Bucket": {
                    "Ref": "S3Bucket"
                }
            },
            "DependsOn" : "S3Bucket"
        },
        "BucketNameParam": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Name": {"Fn::Join" : [ "-", [
                    {"Ref" : "ProjectName" }, 
                    {"Ref" : "EnvironmentName" }, 
                    "BucketName" 
                ]]},
                "Type": "String",
                "Value" : {"Ref" : "S3Bucket"},
                "Description": "Name of S3 bucket",
                "Tags": {
                    "EnvironmentName": {"Ref" : "EnvironmentName"},
                    "ProjectName": {"Ref" : "ProjectName"},
                    "SystemNumber": {"Ref" : "SystemNumber"}
                }
            }
        },
        "BucketARNParam": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Name": {"Fn::Join" : [ "-", [
                    {"Ref" : "ProjectName" }, 
                    {"Ref" : "EnvironmentName" }, 
                    "BucketARN" 
                ]]},
                "Type": "String",
                "Value" : { "Fn::GetAtt" : [ "S3Bucket", "Arn" ] },
                "Description": "Name of S3 bucket",
                "Tags": {
                    "EnvironmentName": {"Ref" : "EnvironmentName"},
                    "ProjectName": {"Ref" : "ProjectName"},
                    "SystemNumber": {"Ref" : "SystemNumber"}
                }
            }
        },
        "BucketRegionalDomainParam": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Name": {"Fn::Join" : [ "-", [
                    {"Ref" : "ProjectName" }, 
                    {"Ref" : "EnvironmentName" }, 
                    "BucketRegionalDomain" 
                ]]},
                "Type": "String",
                "Value" : { "Fn::GetAtt" : [ "S3Bucket", "RegionalDomainName" ] },
                "Description": "Name of S3 bucket",
                "Tags": {
                    "EnvironmentName": {"Ref" : "EnvironmentName"},
                    "ProjectName": {"Ref" : "ProjectName"},
                    "SystemNumber": {"Ref" : "SystemNumber"}
                }
            }
        }
    },
    "Outputs" : {
        "ProjectName" : {
            "Value" : { "Ref" : "ProjectName" },
            "Description" : "Global project name"
        },
        "EnvironmentName" : {
            "Value" : { "Ref" : "EnvironmentName" },
            "Description" : "Global environment name"
        },
        "SystemNumber" : {
            "Value" : { "Ref" : "SystemNumber" },
            "Description" : "Global system number"
        },
        "BucketARN" : {
            "Value" : { "Fn::GetAtt" : [ "S3Bucket", "Arn" ] },
            "Description" : "ARN of S3 Bucket"
        },
        "BucketName" : {
            "Value" : { "Ref" : "S3Bucket" },
            "Description" : "Name of S3 Bucket"
        },    
        "BucketRegionalDomain" : {
            "Value" : { "Fn::GetAtt" : [ "S3Bucket", "RegionalDomainName" ] },
            "Description" : "S3 Bucket regional domain name"
        },    
    }
}